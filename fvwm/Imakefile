/*
 * Imakefile for fvwm 2.0 -- fvwm2
 */

FVWM_SRCDIR = ..
#include "../Fvwm.tmpl"

SRCS = \
	add_window.c \
	bindings.c \
	borders.c \
	builtins.c \
	colormaps.c \
	colors.c \
	complex.c \
	decorations.c \
	events.c \
	focus.c \
	functions.c \
	fvwm.c \
	icons.c \
	menus.c \
	misc.c \
	module.c \
	move.c \
	placement.c \
	read.c \
	resize.c \
	style.c \
	virtual.c \
	windows.c
 
OBJS = \
	add_window.o \
	bindings.o \
	borders.o \
	builtins.o \
	colormaps.o \
	colors.o \
	complex.o \
	decorations.o \
	events.o \
	focus.o \
	functions.o \
	fvwm.o \
	icons.o \
	menus.o \
	misc.o \
	module.o \
	move.o \
	placement.o \
	read.o \
	resize.o \
	style.o \
	usleep.o \
	virtual.o \
	windows.o

LOCAL_LIBRARIES = $(FVWM_LIBS) $(XLIB)

FvwmProgramTarget(FvwmName)


 PATH_DEFINES = -DFVWM_ICONDIR=\"$(ICONPATH)\" \
		-DFVWMDIR=\"$(FVWMDIR)\" \
		-DFVWMRC=\"$(FVWMRC)\"

SpecialObjectRule(builtins.o, $(FVWM_SRCDIR)/Fvwm.tmpl builtins.c, $(PATH_DEFINES))
SpecialObjectRule(read.o, $(FVWM_SRCDIR)/Fvwm.tmpl read.c, $(PATH_DEFINES))
SpecialObjectRule(fvwm.o, $(FVWM_SRCDIR)/Fvwm.tmpl fvwm.c, $(PATH_DEFINES))
