# Foundation, Inc., 675 Mass Ave, Cambridge, MA 02139, USA.

echo "# $ff"
echo "# Collection of fvwm builtin commands for FvwmCommand"
echo ""

echo "alias FvwmCommand='$1/FvwmCommand'"
echo 'AM () { '
echo 'FvwmCommand "+ $*"'
echo '}'


awk 'BEGIN { OFS=""; }
     /struct function/,/""/ {
        if ( $0 ~ /\{ *"[a-zA-Z_]/ ) {
	  split ( $0, a, "\"" );
	  print  a[2]," () {"
	  print  "FvwmCommand \"", a[2], " $*\""
	  print  "}" ;
        }
}'
